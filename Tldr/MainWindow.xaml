<Window x:Class="Tldr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tldr"
        mc:Ignorable="d"
        Title="Tldr - Summarize Text" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Stretch" Height="400" Margin="10,10,0,0" VerticalAlignment="Stretch" Width="774">
            <Label x:Name="LabelInstructions" Content="Enter text locations below, one per line" HorizontalAlignment="Left" Margin="188,27,0,0" VerticalAlignment="Top" Height="37" Width="398" HorizontalContentAlignment="Center" FontSize="16"/>
            <TextBox x:Name="TextboxUrlInput" HorizontalAlignment="Left" Height="237" Margin="65,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="639" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button x:Name="ButtonSubmit" Content="Submit" HorizontalAlignment="Left" Margin="306,332,0,0" VerticalAlignment="Top" Width="158" Height="36" Click="ButtonSubmit_Click"/>
        </Grid>
        
    </Grid>
</Window>
